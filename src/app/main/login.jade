#login
  .outer
  .mid
  .inner
  .content
    .title
      | Star Wars
    form(name="form",ng-submit="vmMC.login(form, user)")
      input(name="email",ng-model="user.email",placeholder="Email",required="required",type="email")
      //
        .error(ng-show="form.email.$invalid &amp;&amp; form.email.$touched")
          p Please enter a email
      input(name="password",ng-model="user.password",placeholder="Password",required="required",type="password")
      //
        .error(ng-show="form.password.$invalid &amp;&amp; form.password.$touched")
          p Please enter a password
      button(type="submit")
        | LOGIN
